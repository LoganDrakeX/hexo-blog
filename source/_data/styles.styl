//index页面中每篇文章相隔的那条线
.posts-expand {
  .post-eof {
    display: block;
    margin: $post-eof-margin-top auto $post-eof-margin-bottom;
    width: 100%;
    height: 2px;
    background: $grey-light;
    text-align: center;
  }
}

//文章中超链接样式
.post-body p a{

  color: #0593d3;
  border-bottom: none;
  &:hover {
    color: #ff106c;
    text-decoration: underline;
  }

}

.post-body li a{

  color: #0593d3;
  border-bottom: none;
  &:hover {
    color: #ff106c;
    text-decoration: underline;
  }

}
